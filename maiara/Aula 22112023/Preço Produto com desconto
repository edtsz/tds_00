#include <stdio.h>

int main() {
    float precoProduto, precoPromocional,desconto;
    
    printf("Digite o pre√ßo do produto: R$ ");
    scanf ("%f",&precoProduto);
    
   
    desconto = ((precoProduto *1.05) - precoProduto);
    precoPromocional = precoProduto -desconto;
    
    printf("Valor promocional com desconto: %f",precoPromocional);
    

    return 0;
}
