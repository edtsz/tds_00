#include <stdio.h>

int main() {
   int numeroX,numeroY,numeroZ,
   printf("Digite um numero: ");
   scanf("%i",&numeroX);
   
   printf("Digite outro numero: ");
   scanf("%i",&numeroY);
  
   
    printf("Digite mais um numero: ");
   scanf("%i",&numeroZ);
    
    if (numeroX > numeroY && numeroX > numeroZ){
        printf("Primeiro numero maior: %i",numeroX);
    } else if (numeroY > numeroX && numeroY > numeroZ){
    printf("Segundo numero menor: %i",numeroY);
    } else if (numeroZ > numeroX && numeroZ > numeroY){
    printf("terceiro numero maior: %i",numeroZ);
     }
        
    
    
   
    return 0;
}
