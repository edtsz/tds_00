// Online C compiler to run C program online
#include <stdio.h>

int main() {
   int numero, antecessor, sucessor;
   printf("Digite o valor que deseja saber: ");
   scanf("%i",&numero);
   
   sucessor = numero +1;
   antecessor = numero -1;
   printf("Numero antecessor %i \n", antecessor);
   printf("Numero sucessor %i \n", sucessor);
    return 0;
}

// Online C compiler to run C program online
#include <stdio.h>

int main() {
    float dolar = 4.91;
    float reais, dolarescomprados;
    
    printf("Digite o valor em sua carterira: ");
    scanf("%f",&reais);
   printf("Valor do dolar: %.2f \n",dolar);
    dolarescomprados=reais/dolar;
    
    
    printf("valor na carteira: %f \n",dolarescomprados);
    
    return 0;
}


#include <stdio.h>

int main() {
   int numeroX,numeroY,numeroZ,
   printf("Digite um numero: ");
   scanf("%i",&numeroX);
   
   printf("Digite outro numero: ");
   scanf("%i",&numeroY);
  
   
    printf("Digite mais um numero: ");
   scanf("%i",&numeroZ);
    
    if (numeroX > numeroY && numeroX > numeroZ){
        printf("Primeiro numero maior: %i",numeroX);
    } else if (numeroY > numeroX && numeroY > numeroZ){
    printf("Segundo numero menor: %i",numeroY);
    } else if (numeroZ > numeroX && numeroZ > numeroY){
    printf("terceiro numero maior: %i",numeroZ);
     }
        
    
    
   
    return 0;
}


